@model IEnumerable<FunctionFood.Models.Product>
@{
    ViewData["Title"] = "Trang chủ - Cửa Hàng Thực Phẩm Chức Năng";
}

<section class="home">

    <div class="slides-container">

        <div class="slide active">
            <div class="content">
                <span>Chăm sóc sức khỏe mỗi ngày</span>
                <h3>Giảm giá đến 17% cho sản phẩm bổ sung vitamin</h3>
                <a href="/Shop" class="btn">Mua ngay</a>
            </div>
            <div class="image">
                <img src="~/img/banner1.jpg" alt="Thực phẩm chức năng 1">
            </div>
        </div>

        <div class="slide">
            <div class="content">
                <span>Uy tín & chất lượng</span>
                <h3>Ưu đãi đến 10% cho đơn hàng đầu tiên</h3>
                <a href="/Shop" class="btn">Mua ngay</a>
            </div>
            <div class="image">
                <img src="~/img/banner2.png" alt="Thực phẩm chức năng 2">
            </div>
        </div>

        <div class="slide">
            <div class="content">
                <span>Hỗ trợ miễn phí tư vấn</span>
                <h3>Khuyến mãi 7% cho khách hàng thân thiết</h3>
                <a href="/Shop" class="btn">Mua ngay</a>
            </div>
            <div class="image">
                <img src="~/img/banner4.jpeg" alt="Thực phẩm chức năng 3">
            </div>
        </div>

    </div>

    <div id="next-slide" class="fas fa-angle-right" onclick="next()"></div>
    <div id="prev-slide" class="fas fa-angle-left" onclick="prev()"></div>

</section>


<section class="products">

    <h1 class="title"> Sản phẩm <span>nổi bật</span> </h1>

    <div class="box-container">
        @foreach (var product in Model)
        {
            <div class="box">
                <div class="icons">
                    <a asp-controller="Cart"
                       asp-action="AddToCart"
                       asp-route-productId="@product.ProductId"
                       class="add-to-cart"
                       title="Thêm vào giỏ hàng">
                        <i class="fas fa-shopping-cart"></i>
                    </a>

                    <a href="/Favorite/AddToFavorite?productId=@product.ProductId" class="favorite-icon">
                        <i class="fas fa-heart" title="Thêm vào yêu thích"></i>
                    </a>

                    <a asp-controller="Shop" asp-action="Shopdetail" asp-route-id="@product.ProductId" class="fas fa-eye" title="Xem chi tiết"></a>
                </div>
                <div class="image">
                    <img src="@product.Image" alt="@product.ProductName" style="object-fit: cover; border-radius: 8px;" />
                </div>
                <div class="content">
                    <h3>@product.ProductName</h3>
                    <div class="price">@product.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</div>
                    <div class="stars">
                    </div>
                </div>
            </div>
        }
    </div>

</section>
